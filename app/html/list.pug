include block_html/_style.pug
include block_html/_include.pug
.content.content--main
	+header()
	.cont
		.main-cont
			.content-wrap
				.content-nav
					.content-nav__wrap
						a(href="#").content-nav-el.content-nav-el--active Актиный пункт
						-
							var items = [
							'Устав партнёрства',
							'Доска почёта',
							'Состав партнёрства',
							'Комитеты партнёрства',
							'Контакты'
							];
						each item in items
							a(href="#").content-nav-el #{item}

					.content-nav__banner
						- for (var i=1;i<3;i++)
							.content-nav__banner-el.simle-banner Банер #{i}
				.content-info
					.main-title Последние новости
					.list.list--triple
						- for (var i=1;i<7;i++)
							a(href="#").list__el
								.list__el-img(style="background-image:url('img/item-" + i + ".jpg')")
								.list__el-content
									.list__el-title Новости VIII Всероссийской конференции itSMF
									.list__el-text Повторять функционал коробочных систем, например Service Desk, в BPMS можно при большом запасе нервов, времени и денег. Почему мы рекомендуем этого не делать — в этой статье ...
									.list__el-date 17.08.2017

		.all-conf(style="background-image:url('img/item-7.jpg')")
			.filter.filter--red
			.all-conf__content
				.all-conf__title Все конференции itSMF России
				a(href="#").all-conf__get www.itsmfcon.ru
		.members
			.main-cont
				.members-wrap
					.members-list
						- for (var i=1;i<8;i++)
							.members-list__el
								img(src="img/sponsor-" + i + ".png", alt="")
					a(href="#").members-get Члены Форума

	+footer()
+modals()
include ./block_html/_script.pug
